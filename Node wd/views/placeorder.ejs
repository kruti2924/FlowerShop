<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Place Order</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
         @import url('https://fonts.googleapis.com/css2?family=Aclonica&display=swap');

:root {
    --blue: #3e2093;
}
*{
    margin: 0;
    padding: 0;
    /* box-sizing: border-box; */
    text-decoration: none;
    
}
html {
            font-size: 62.5%;
            scroll-behavior: smooth;
            scroll-padding-top: 6rem;
            overflow-x: hidden;
        }
header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: #fff;
            padding: 2rem 9%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 1000;
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .1);
            box-sizing: border-box;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            text-decoration: none;
        }

        header .logo {
            font-size: 3rem;
            color: #7984c9;
            font-weight: bolder;
            font-family: "Aclonica", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        header .navbar a {

padding: 3rem 3rem 3rem 3.5rem;
color: #666;
}

.navbar {

gap: 0px;
font-size: 20px;
}

header .navbar a:hover {
color: var(--blue);
text-decoration: underline;
color: #3e2093;
cursor: pointer;
}

header .icons a {
            font-size: 2.5rem;
            color: #333;
            margin-left: 1.5rem;
        }

        header .icons a:hover {
            color: var(--blue);
        }

        header #toggler {
            display: none;
        }

        header .fa-bars {
            font-size: 3rem;
            color: #333;
            border-radius: .5rem;
            padding: .5rem 1.5rem;
            cursor: pointer;
            border: .1rem solid rgba(0, 0, 0, .3);
            display: none;
        }
        
        /* Additional styles for the flower shop */
        body {
            font-family: 'Arial', sans-serif;
            margin:0px;
            padding: 0px;
            background-image: url('https://png.pngtree.com/background/20210716/original/pngtree-blue-dream-blurry-flowers-flower-background-picture-image_1368549.jpg');
            /* Replace 'background.jpg' with your actual image URL */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            opacity: 1;
            /* Adjust the opacity as needed */
        }
        
        form {
            
            background-color: rgb(224, 240, 255);
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 5px 10px 0px rgb(0,0,0,0.2);
            max-width: 400px;
            width: 100%;
            margin-top:85px;
            max-height: 70vh;
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 7px;
            font-size: 13px;;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .quantity {
            display: flex;
            align-items: center;
        }

        .quantity button {
            background-color: #ddd;
            color: #333;
            border: none;
            border-radius: 4px;
            padding: 8px 12px;
            font-size: 20px;
            cursor: pointer;
        }

        .quantity button:hover {
            background-color: #ccc;
        }

        .quantity input {
            width: 60px;
            text-align: center;
            margin: 0 10px;
        }

        button.place-order-btn {
            background-color: #3e2093;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 14px 20px;
            font-size: 18px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
        }

        button.place-order-btn:hover {
            background-color: #6b6ba3;
        }

        .success-message {
            text-align: center;
            color: #4CAF50;
            font-size: 18px;
            margin-top: 20px;
        }

        /* Dialog box styles */
        .dialog-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .dialog-box {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            max-width: 80%;
            text-align: center;
        }

        .dialog-box h2 {
            margin-top: 0;
            color: #333;
        }

        .dialog-box p {
            margin-bottom: 20px;
            color: #666;
        }

        .dialog-box button {
            background-color: #56c259;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .dialog-box button:hover {
            background-color: #45a049;
        }
        @media (max-width: 991px) {
            
            html{
                font-size: 55%;
            }
            header {
                padding: 2rem;
            }

            
        }

        @media (max-width: 768px) {

            header .fa-bars {
                display: block;

            }

            header .navbar {
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: #eee;
                border-top: 1rem solid rgba(0, 0, 0, .1);
                clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
            }

            header #toggler:checked~.navbar {
                clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);

            }


            header .navbar a {
                margin: 1.5rem;
                padding: 1.5rem;
                background-color: #fff;
                /* border: 1rem solid rgba(0, 0, 0, .1); */

                display: block;
            }
            body{
                background-size: contain;
            }

            
    

        }

        @media (max-width: 450px) {
            html {
                font-size: 50%;
            }
            body{
                background-size: auto;
            }
        }
    </style>
</head>

<body>
    <header>
        <input type="checkbox" name="" id="toggler">
        <label for="toggler" class="fas fa-bars"></label>
        <a href="#" class="logo">
            Floral Paradise</a>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="/aboutus">About Us</a>
            <a href="/contactus">Contact</a>
            <a href="/help">Orders</a>
        </nav>
        <div class="icons">
            <a href="#" class="fas fa-shopping-cart"></a>

        </div>
    </header>
    <form id="orderForm" action="/product/<%=pid%>" method="POST">
        <h1>Order Flowers
        </h1>
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" required maxlength="10">
        </div>
        <div class="form-group quantity">
            <label for="quantity">Quantity:</label>
            <button type="button" id="decreaseBtn">-</button>
            <input type="number" id="quantity" name="quantity" value="1" min="1">
            <button type="button" id="increaseBtn">+</button>
        </div>
        <div class="form-group">
            <label for="totalBill">Total Bill:</label>
            <input type="text" id="totalBill" name="totalBill" readonly>
        </div>
        <div class="form-group">
            <button type="submit" class="place-order-btn">Place Order</button>
        </div>
        <p id="successMessage" class="success-message"></p>
    </form>

    <!-- Dialog box HTML -->
    <div class="dialog-overlay" id="dialogOverlay" style="display: none;">
        <div class="dialog-box">
            <h2>Order Details</h2>
            <p id="orderDetails"></p>
            <button id="closeDialogBtn">Close</button>
        </div>
    </div>

    <script>
        const orderForm = document.getElementById('orderForm');
        const decreaseBtn = document.getElementById('decreaseBtn');
        const increaseBtn = document.getElementById('increaseBtn');
        const quantityInput = document.getElementById('quantity');
        const totalBillInput = document.getElementById('totalBill');
        const successMessage = document.getElementById('successMessage');
        const dialogOverlay = document.getElementById('dialogOverlay');
        const closeDialogBtn = document.getElementById('closeDialogBtn');
        
        // Calculate total bill based on quantity
        function calculateTotalBill() {
            const quantity = parseInt(quantityInput.value);
            const unitPrice = parseFloat('<%= price %>'); // Assuming unit price is $10
            const totalBill = quantity * unitPrice;
            totalBillInput.value = 'â‚¹' + totalBill.toFixed(2);
        }

        // Event listeners for increase and decrease buttons
        decreaseBtn.addEventListener('click', () => {
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
                calculateTotalBill();
            }
        });

        increaseBtn.addEventListener('click', () => {
            quantityInput.value = parseInt(quantityInput.value) + 1;
            calculateTotalBill();
        });
        
        // Calculate total bill on page load
        calculateTotalBill();
    </script>
</body>

</html>